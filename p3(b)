
import java.lang.String;
import java.util.*;
public class stringcomp {

    public static void main(String[] args) {
        StringBuffer s1= new StringBuffer("Sanjana");
        System.out.println("String  is :"+s1);
        System.out.println("String length is :"+ s1.length());
        System.out.println("capacity is :"+ s1.capacity());


        System.out.println("enter  a string");
        Scanner scan= new Scanner(System.in);
        String inputString = scan.nextLine();
        StringBuffer s2= new StringBuffer(inputString);
        System.out.println("the reverse is :"+ s2.reverse());
        System.out.println("the uppercase of reverse  is :"+ s2.toString().toUpperCase());

        System.out.println("enter  a other string");
        Scanner scanner= new Scanner(System.in);
        String input = scanner.nextLine();
        StringBuffer s3= new StringBuffer(input);
        System.out.println("the concatinated is :"+ s2+s3);
    }
}
